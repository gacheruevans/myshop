doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
    body
        header.main-header
            nav.main-header__nav 
                ul.main-header__item-list
                    li.main-header__item 
                        a.active(href="/") Home
                    li.main-header__item 
                        a(href="/admin/dashboard") Dashboard
                    li.main-header__item 
                        a(href="/admin/add-product") + New Product
                    li.main-header__item 
                        a(href="/admin/add-user") + New User
        main
            if prods.length > 0 
                .grid
                    each product in prods 
                        article.card.product-item
                            header.card__header 
                                h1.product__title #{product.title}
                            div.card__image 
                                img(src="https://st2.depositphotos.com/1105977/5461/i/600/depositphotos_54615585-stock-photo-old-books-on-wooden-table.jpg", alt="A Book") 
                            div.card__content 
                                h2.product__price Kshs 2,500
                                p.product__description A very interesting book about so many even more great stuff 
                            .card__actions 
                                button.btn Add to Cart
            else 
                p No Products